<TooltipMDIconButton@MDIconButton+MDTooltip>
<CustomPopup@Popup>:
    auto_dismiss: False
    title:"SELECTED"
    size_hint:0.8,0.4
    text:""
    BoxLayout:
        orientation:'vertical'

        Label:
            halign:'center'
            text:root.text
            size_hint_y:0.3

        BoxLayout:

            size_hint_y:0.4


            Widget:
                size_hint_x:None
                width:50
            Button:
                text: 'Dismiss'
                size_hint_y:0.3
                size_hint_x:None
                width:200
                on_release: root.dismiss()
                halign:"left"
            Widget:
                size_hint_x:None
                width:50

            Button:
                text: 'Play Sound'
                size_hint_y:0.3
                size_hint_x:None
                width:200
                on_release:
                    app.send(argumen=root.text)
                    root.dismiss()
                halign:"right"



<Screen1>:
#:import platform kivy.utils.platform





    MDBoxLayout:
        orientation:'vertical'




        MDBoxLayout:
            size_hint_y:0.7
            ScrollView:

                FileChooserListView:
                    id: filechooser
                    on_submit: app.selected(*args)
                    filters:['*.wav']
                    path:'/sdcard' if platform == 'android' else '/Users/willson/downloads'
        MDBoxLayout:
            id:container
            size_hint_y:0.1
        MDBoxLayout:
            size_hint_y:0.2

            MDRaisedButton:
                text:"PAUSE"
                size_hint_x:0.333
                on_release:app.pause()
                md_bg_color:69/255,100/255,92/255,1
            MDRaisedButton:
                text:'RESUME'
                size_hint_x:0.333
                on_release:app.play_again()
                md_bg_color:69/255,100/255,145/255,1

            MDRaisedButton:
                size_hint_x:0.333
                text:"REPEAT"
                on_release:app.set_loop()
                md_bg_color:64/255,150/255,145/255,1







